#include <stdio.h>
#include <conio.h>
#include <stdlib.h>
#include <string.h>
char *daochuoi(char *s) {
	char *tmp, i;
	i = 0;
	tmp = (char *)malloc(strlen(s)+1);
	while (i<strlen(s))
		*(tmp+i) = *(s + strlen(s) - i++ - 1);
	*(tmp+i) = 0;
	return tmp;
}
int main() {
	char a[100];
	printf("\nNhap chuoi: %s", a);
	gets(a);
	char *s;
	s = daochuoi(a);
	printf("\nChuoi dao nguoc: %s", s);
	getch();
}